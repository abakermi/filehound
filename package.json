{
  "name": "filehound",
  "version": "1.0.1",
  "description": "Fluent interface for finding files",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "coverage": "istanbul cover _mocha -- -R dot",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nspragg/filehound.git"
  },
  "keywords": [
    "file",
    "recursive",
    "search",
    "filehound"
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "author": "nspragg@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nspragg/filehound/issues"
  },
  "homepage": "https://github.com/nspragg/filehound",
  "devDependencies": {
    "eslint": "^2.2.0",
    "istanbul": "^0.4.1",
    "mocha": "^2.1.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ],
      "eqeqeq": 2,
      "no-var": 2,
      "one-var": [
        2,
        "never"
      ],
      "prefer-const": 2,
      "semi": 2,
      "strict": [
        2,
        "global"
      ],
      "arrow-parens": 2,
      "prefer-arrow-callback": 2
    }
  },
  "dependencies": {
    "bluebird": "^3.3.3",
    "fs-promise": "^0.4.1",
    "lodash": "^4.6.1",
    "minimatch": "^3.0.0"
  }
}
